<style>
  #shopify-section-{{ section.id }} {
    --progress-bar-color: {{ section.blocks.first.settings.text_color.red }}, {{ section.blocks.first.settings.text_color.green }}, {{ section.blocks.first.settings.text_color.blue }};
    --section-autoplay-duration: {% if section.settings.autoplay %}{{ section.settings.cycle_speed }}s{% else %}0s{% endif %};
    --section-animation-play-state: paused;
    background-color: {{ section.settings.background }}; /* Allows to set a placeholder color while loading */
  }

  {%- comment -%}Critical CSS для першого слайду - зменшує render delay{%- endcomment -%}
  #shopify-section-{{ section.id }} .slideshow__slide:first-child {
    display: block;
  }
  
  #shopify-section-{{ section.id }} .slideshow__image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }
  
  {%- comment -%}Оптимізація для зменшення layout shift{%- endcomment -%}
  #shopify-section-{{ section.id }} .slideshow__image-wrapper {
    position: relative;
    overflow: hidden;
    {%- if section.settings.section_height != 'auto' -%}
      height: 100%;
    {%- endif -%}
  }

  {%- comment -%}Оптимізація для hidden слайдів - зменшує render cost{%- endcomment -%}
  #shopify-section-{{ section.id }} .slideshow__slide[hidden] {
    content-visibility: hidden;
  }
  
  {%- comment -%}Prevent layout shift with aspect ratio{%- endcomment -%}
  #shopify-section-{{ section.id }} .slideshow__image-wrapper img {
    aspect-ratio: attr(width) / attr(height);
  }

  {%- for block in section.blocks -%}
    {%- liquid 
      assign now = "now" | date: "%s"

      if block.settings.schedule_publishing
        assign publish_date = block.settings.publish_date | date: "%s"

        if publish_date != blank and now < publish_date
          continue
        endif
      endif

      if block.settings.schedule_unpublishing
        assign unpublish_date = block.settings.unpublish_date | date: "%s"

        if unpublish_date != blank and now > unpublish_date
          continue
        endif
      endif
    -%}

    {%- assign text_position = block.settings.text_position | split: '_' | first -%}

    {%- case text_position -%}
      {%- when 'top' -%}
        {%- assign section_items_alignment = 'flex-start' -%}
      {%- when 'middle' -%}
        {%- assign section_items_alignment = 'center' -%}
      {%- when 'bottom' -%}
        {%- assign section_items_alignment = 'flex-end' -%}
    {%- endcase -%}

    #block-{{ section.id }}-{{ block.id }} {
      --heading-font-family: var(--font-{{ block.settings.heading_font_family | default: "circular" }});
      --heading-color: {{ block.settings.heading_color.red }}, {{ block.settings.heading_color.green }}, {{ block.settings.heading_color.blue }};
      --text-color: {{ block.settings.text_color.red }}, {{ block.settings.text_color.green }}, {{ block.settings.text_color.blue }};
      --primary-button-background: {{ block.settings.button_background.red }}, {{ block.settings.button_background.green }}, {{ block.settings.button_background.blue }};
      --primary-button-text-color: {{ block.settings.button_text_color.red }}, {{ block.settings.button_text_color.green }}, {{ block.settings.button_text_color.blue }};

      --section-blocks-alignment: {{ section_items_alignment }};
      --section-blocks-overlay-color: {{ block.settings.overlay_color.red }}, {{ block.settings.overlay_color.green }}, {{ block.settings.overlay_color.blue }};
      --section-blocks-overlay-opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};

      color: rgb(var(--text-color));
    }
  {%- endfor -%}
</style>

<section class="section section-slideshow section--flush">
  {%- assign banner_usps_heading = section.settings.banner_usps_heading -%}
  {%- assign show_banner_usps = section.settings.show_banner_usps -%}
  {%- assign show_hide_button = section.settings.show_hide_button -%}
  {%- assign banner_usps_link = section.settings.banner_usps_link -%}

  {%- capture banner_usps_cols -%}
    {%- assign number_of_cols = 0 -%}

    {%- for i in (1..4) -%}
      {%- assign type_svg = 'banner_usps_svg_' | append: i -%}
      {%- assign type_heading = 'banner_usps_heading_' | append: i -%}
      {%- assign banner_usps_svg = section.settings[type_svg] -%}
      {%- assign banner_usps_col_heading = section.settings[type_heading] -%}

      {%- if banner_usps_svg != blank and banner_usps_col_heading != blank -%}
        {%- assign number_of_cols = number_of_cols | plus: 1 -%}

        <div class="banner-usps__col">
          {%- comment -%}Lazy load USP іконки - не критичні для LCP{%- endcomment -%}
          <img
            class="banner-usps__col-image"
            src="{{- banner_usps_svg | image_url: width: 96 -}}"
            alt="{{- banner_usps_svg.alt | default: banner_usps_col_heading -}}"
            loading="lazy"
            decoding="async"
            width="48"
            height="48"
          />

          <h3 class="banner-usps__col-heading">
            {{- banner_usps_col_heading -}}
          </h3>
        </div>
      {%- endif -%}
    {%- endfor -%}
  {%- endcapture -%}

  {%- if banner_usps_cols != blank and show_banner_usps == true -%}
    {%- comment -%}Banner USPs завантажується після критичного контенту{%- endcomment -%}
    <div
      class="banner-usps show js-banner-usps"
      style="
        --banner-usps-bg-color: {{ section.settings.banner_usps_bg_color }};
        --banner-usps-text-color: {{ section.settings.banner_usps_text_color }};"
    >
      {%- if banner_usps_heading != blank -%}
        <h2 class="banner-usps__heading {% if show_hide_button == true %}banner-usps__heading--with-margin{% endif %}">
          {{- banner_usps_heading -}}
        </h2>
      {%- endif -%}

      {%- if show_hide_button == true -%}
        <button class="banner-usps__hide-button js-banner-usps-hide-button" type="button" aria-label="Close banner">
          {%- render 'icon' with 'close' -%}
        </button>
      {%- endif -%}

      <div class="banner-usps__row">
        {{- banner_usps_cols -}}
      </div>

      {%- if banner_usps_link -%}
        <a
          href="{{- banner_usps_link -}}" class="banner-usps__link" aria-label="Learn more"></a>
      {%- endif -%}
    </div>
  {%- endif -%}

  <slide-show reveal-on-scroll {% if section.settings.autoplay %}auto-play{% endif %} transition-type="{{ section.settings.transition_type | escape }}" class="slideshow slideshow--{{ section.settings.section_height }}">
    <div class="slideshow__slide-list">
      {%- assign slide_counter = 0 -%}
      
      {%- for block in section.blocks -%}
        {%- liquid 
          assign now = "now" | date: "%s"

          if block.settings.schedule_publishing
            assign publish_date = block.settings.publish_date | date: "%s"

            if publish_date != blank and now < publish_date
              continue
            endif
          endif

          if block.settings.schedule_unpublishing
            assign unpublish_date = block.settings.unpublish_date | date: "%s"

            if unpublish_date != blank and now > unpublish_date
              continue
            endif
          endif
        -%}

        {%- assign slide_counter = slide_counter | plus: 1 -%}

        {%- comment -%}
        ------------------------------------------------------------------------------------------------------------------
        IMAGE PART
        ------------------------------------------------------------------------------------------------------------------
        {%- endcomment -%}

        {%- assign image = block.settings.image -%}
        {%- assign split_image = block.settings.split_image -%}
        {%- assign mobile_image = block.settings.mobile_image -%}

        {%- assign image_aspect_ratio = image.aspect_ratio | default: 2.63 -%}

        {%- comment -%}
        If the image is split and that we want to preserve the ratio, we have to multiply the ratio by 2 (as each image
        only account for half the screen size)
        {%- endcomment -%}

        {%- if image != blank and split_image != blank and section.settings.section_height == 'auto' -%}
          {%- assign image_aspect_ratio = image_aspect_ratio | times: 2.0 -%}
        {%- endif -%}

        {%- comment -%}Визначаємо стратегію завантаження для кожного слайду{%- endcomment -%}
        {%- if slide_counter > 1 -%}
          {%- assign should_preload = false -%}
        {%- else -%}
          {%- assign should_preload = true -%}
        {%- endif -%}

        {%- capture slide_content -%}
          <div class="slideshow__image-wrapper {% if mobile_image != blank %}hidden-pocket{% endif %}"{% if slide_counter != 1 and section.settings.transition_type == 'reveal' %} reveal-visibility{% endif %}{% if slide_counter == 1 %} style="visibility: visible; opacity: 1;"{% endif %}>
            {%- if image != blank -%}
              {%- comment -%}Оптимізовані sizes атрибути для мобільних та десктопів{%- endcomment -%}
              {%- capture sizes_attributes -%}{% if split_image != blank %}(min-width: 1000px) 50vw, (min-width: 750px) 100vw, 100vw{% else %}(min-width: 1600px) 1600px, (min-width: 1000px) 100vw, (min-width: 750px) 100vw, 100vw{% endif %}{%- endcapture -%}
              {%- if should_preload -%}
                {%- comment -%}Перший слайд: preload, fetchpriority high, eager loading, оптимізовані widths{%- endcomment -%}
                {{- image | image_url: width: 1600 | image_tag: loading: 'eager', fetchpriority: 'high', preload: true, decoding: 'async', draggable: false, class: 'slideshow__image', sizes: sizes_attributes, widths: '375,550,750,1000,1200,1400,1600' -}}
              {%- else -%}
                {%- comment -%}Інші слайди: lazy loading, зменшена кількість варіантів{%- endcomment -%}
                {{- image | image_url: width: 1600 | image_tag: loading: 'lazy', decoding: 'async', draggable: false, class: 'slideshow__image', sizes: sizes_attributes, widths: '375,550,750,1000,1200,1400,1600' -}}
              {%- endif -%}
            {%- else -%}
              {% capture image_name %}lifestyle-{% cycle '1', '2' %}{%- endcapture -%}
              {{- image_name | placeholder_svg_tag: 'slideshow__image slideshow__image--placeholder' -}}
            {%- endif -%}
          </div>

          {%- comment -%}If a second image (split image) is uploaded, we use it. Note that we use the same ratio as the first image (to have equal column height){% endcomment %}
          {%- if image != blank and split_image != blank -%}
            <div class="slideshow__image-wrapper slideshow__image-wrapper--secondary hidden-pocket"{% if slide_counter != 1 and section.settings.transition_type == 'reveal' %} reveal-visibility{% endif %}{% if slide_counter == 1 %} style="visibility: visible; opacity: 1;"{% endif %}>
              {%- if should_preload -%}
                {%- comment -%}Split зображення для першого слайду: eager loading, оптимізовані widths{%- endcomment -%}
                {{- split_image | image_url: width: 1600 | image_tag: loading: 'eager', fetchpriority: 'high', decoding: 'async', draggable: false, class: 'slideshow__image', sizes: '(min-width: 1000px) 50vw, 100vw', widths: '375,550,750,1000,1200,1400,1600' -}}
              {%- else -%}
                {{- split_image | image_url: width: 1600 | image_tag: loading: 'lazy', decoding: 'async', draggable: false, class: 'slideshow__image', sizes: '(min-width: 1000px) 50vw, 100vw', widths: '375,550,750,1000,1200,1400,1600' -}}
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- if mobile_image != blank -%}
            <div class="slideshow__image-wrapper hidden-lap-and-up"{% if slide_counter != 1 and section.settings.transition_type == 'reveal' %} reveal-visibility{% endif %}{% if slide_counter == 1 %} style="visibility: visible; opacity: 1;"{% endif %}>
              {%- if should_preload -%}
                {%- comment -%}Мобільне зображення для першого слайду: оптимізовані widths для мобайлу{%- endcomment -%}
                {{- mobile_image | image_url: width: 800 | image_tag: loading: 'eager', fetchpriority: 'high', preload: true, decoding: 'async', draggable: false, class: 'slideshow__image', sizes: '100vw', widths: '375,414,550,640,750,800' -}}
              {%- else -%}
                {{- mobile_image | image_url: width: 800 | image_tag: loading: 'lazy', decoding: 'async', draggable: false, class: 'slideshow__image', sizes: '100vw', widths: '375,414,550,640,750,800' -}}
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- comment -%}
          ----------------------------------------------------------------------------------------------------------------
          CONTENT PART
          ----------------------------------------------------------------------------------------------------------------
          {%- endcomment -%}

          {%- capture section_content -%}
            {%- if block.settings.subheading != blank -%}
              <h2 class="heading heading--small js-slideshow-subheading">
                <split-lines {% if section.settings.transition_type != 'fade' %}reveal{% endif %}>{{ block.settings.subheading | escape }}</split-lines>
              </h2>
            {%- endif -%}

            {%- if block.settings.title != blank -%}
              {%- if slide_counter == 1 -%}
                <h1 class="heading heading--large js-slideshow-heading">
                  <split-lines {% if section.settings.transition_type != 'fade' %}reveal{% endif %}>{{ block.settings.title | escape }}</split-lines>
                </h1>
              {%- else -%}
                <h3 class="heading heading--large js-slideshow-heading">
                  <split-lines {% if section.settings.transition_type != 'fade' %}reveal{% endif %}>{{ block.settings.title | escape }}</split-lines>
                </h3>
              {%- endif -%}
            {%- endif -%}

            {%- if block.settings.subtitle != blank or block.settings.subtitle_html != blank -%}
              <div class="slideshow-slide__subtitle js-slideshow-subtitle">
                {{- block.settings.subtitle | default: block.settings.subtitle_html -}}
              </div>
            {%- endif -%}

            {%- capture buttons -%}
              {%- if block.settings.button_1_text != blank -%}
                <a href="{{ block.settings.button_1_link }}" class="button button--primary">{{ block.settings.button_1_text | escape }}</a>
              {%- endif -%}

              {%- if block.settings.button_2_text != blank -%}
                <a href="{{ block.settings.button_2_link }}" class="button button--primary">{{ block.settings.button_2_text | escape }}</a>
              {%- endif -%}
            {%- endcapture -%}

            {%- if block.settings.button_1_text != blank and block.settings.button_2_text != blank -%}
              <div class="button-group" {% if section.settings.transition_type != 'fade' %}reveal{% endif %}>
                <div class="button-group__wrapper">
                  {{- buttons -}}
                </div>
              </div>
            {%- elsif buttons != blank -%}
              <div class="button-wrapper" {% if section.settings.transition_type != 'fade' %}reveal{% endif %}>
                {{- buttons -}}
              </div>
            {%- endif -%}
          {%- endcapture -%}

          {%- if section_content != blank -%}
            <div class="container">
              {%- assign text_alignment = block.settings.text_position | split: '_' | first -%}
              {%- assign text_position = block.settings.text_position | split: '_' | last -%}

              <div class="slideshow__text-wrapper slideshow__text-wrapper--{{ text_alignment }} vertical-breather">
                <div class="content-box content-box--medium content-box--text-{{ text_position }} content-box--{{ text_position }} text-container">
                  {{- section_content -}}
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endcapture -%}

        {%- comment -%}If only the button 1 link is filled, then we make the whole slide clickable{%- endcomment -%}

        {%- capture slide_attributes -%}
          {{ block.shopify_attributes }}
          id="block-{{ section.id }}-{{ block.id }}"
          class="slideshow__slide {% if split_image != blank %}slideshow__slide--split{% endif %} {% if section.settings.transition_type == 'sweep' %}slideshow__slide--sweep{% endif %}"
          {% unless slide_counter == 1 %}hidden{% endunless %}
          {% if section.settings.section_height == 'auto' %}
            style="--image-aspect-ratio: {{ image_aspect_ratio }}; --mobile-image-aspect-ratio: {{ mobile_image.aspect_ratio | default: image_aspect_ratio | default: 1 }};"
          {% endif %}
        {%- endcapture -%}

        <slide-show-item {% if slide_counter == 1 and section.settings.transition_type == "fade" %}style="visibility: visible; opacity: 1;"{% endif %} {% if section.settings.transition_type != 'reveal' %}reveal-visibility{% endif %} {{ slide_attributes }}>
          {%- if block.settings.button_1_link != blank and block.settings.button_1_text == blank and block.settings.button_2_text == blank -%}
            <a class="slideshow__slide-inner" href="{{ block.settings.button_1_link }}">
              {{- slide_content -}}
            </a>
          {%- else -%}
            <div class="slideshow__slide-inner">
              {{- slide_content -}}
            </div>
          {%- endif -%}
        </slide-show-item>
      {%- endfor -%}
    </div>

    {%- if section.blocks.size > 1 -%}
      <page-dots {% if section.settings.autoplay %}animation-timer{% endif %} class="slideshow__nav container">
        {%- assign slide_counter = 0 -%}
        {%- for block in section.blocks -%}
          {%- liquid 
            assign now = "now" | date: "%s"
  
            if block.settings.schedule_publishing
              assign publish_date = block.settings.publish_date | date: "%s"
  
              if publish_date != blank and now < publish_date
                continue
              endif
            endif
  
            if block.settings.schedule_unpublishing
              assign unpublish_date = block.settings.unpublish_date | date: "%s"
  
              if unpublish_date != blank and now > unpublish_date
                continue
              endif
            endif
          -%}

          {%- assign slide_counter = slide_counter | plus: 1 -%}

          <button class="slideshow__progress-bar" aria-controls="block-{{ section.id }}-{{ block.id }}" {% if slide_counter == 1 %}aria-current="true"{% endif%}>
            <span class="visually-hidden">{{ 'general.accessibility.go_to_slide' | t: num: slide_counter }}</span>
          </button>
        {%- endfor -%}
      </page-dots>
    {%- endif -%}
  </slide-show>
</section>

