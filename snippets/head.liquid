{% comment %}
  âš¡ Ultra-minimal HEAD for Shopify performance testing
  No JS, analytics, tracking, or deferred scripts.
  Only core SEO, CSS, and meta for proper rendering.
{% endcomment %}

<!-- META -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="theme-color" content="#ffffff">

<!-- TITLE -->
<title>
  {% if page_title %}
    {{ page_title }}
  {% else %}
    {{ shop.name }}
  {% endif %}
</title>

<!-- FAVICON -->
{% if settings.favicon %}
  <link rel="icon" href="{{ settings.favicon | image_url: width: 96 }}" type="image/png">
{% endif %}

<!-- DESCRIPTION -->
{% if page_description %}
  <meta name="description" content="{{ page_description | escape }}">
{% endif %}

<!-- CANONICAL + BASIC SEO -->
<link rel="canonical" href="{{ canonical_url }}">
{% render 'social-meta-tags' %}
{% render 'microdata-schema' %}

<!-- CSS ONLY -->

<link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">

<!-- KEEP ONLY REQUIRED SHOPIFY HEADER -->
{{ content_for_header }}
