  "@type": "BreadcrumbList",
  "itemListElement": [{
      "@type": "ListItem",
      "position": 1,
      "name": {{ 'general.breadcrumb.home' | t | json }},
      "item": {
        "@type": "WebPage",
        "@id": "{{ shop.url }}",
        "name": {{ 'general.breadcrumb.home' | t | json }}
      }
    }

    {%- if request.page_type == 'product' -%}
      {%- if collection -%}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ collection.title | json }},
          "item": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ collection.url }}",
            "name": {{ collection.title | json }}
          }
        }, {
          "@type": "ListItem",
          "position": 3,
          "name": {{ product.title | json }},
          "item": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ product.url }}",
            "name": {{ product.title | json }}
          }
        }
      {%- else -%}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ product.title | json }},
          "item": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ product.url }}",
            "name": {{ product.title | json }}
          }
        }
      {%- endif -%}
    {%- elsif request.page_type == 'collection' -%}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ collection.title | json }},
          "item": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ collection.url }}",
            "name": {{ collection.title | json }}
          }
        }
    {%- elsif request.page_type == 'blog' -%}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ blog.title | json }},
          "item": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ blog.url }}",
            "name": {{ blog.title | json }}
          }
        }
    {%- elsif request.page_type == 'article' -%}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ blog.title | json }},
          "item": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ blog.url }}",
            "name": {{ blog.title | json }}
          }
        }, {
          "@type": "ListItem",
          "position": 3,
          "name": {{ article.title | json }},
          "item": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ article.url }}",
            "name": {{ article.title | json }}
          }
        }
    {%- elsif request.page_type == 'page' -%}
       ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ page.title | json }},
          "item": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ page.url }}",
            "name": {{ page.title | json }}
          }
        }
    {%- endif -%}
  ]
{%- endcapture -%}

{% if main_entity_microdata != blank %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    {{ main_entity_microdata }}
  }
  </script>
{% endif %}

{% if breadcrumb_entity_microdata != blank %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    {{ breadcrumb_entity_microdata }}
  }
  </script>
{% endif %}

{%- if request.page_type == 'index' -%}
  {%- assign potential_action_target = request.origin | append: routes.search_url | append: "?q={search_term_string}" -%}

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "url": {{ shop.url | append: page.url | json }},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {{ potential_action_target | json }},
        "query-input": "required name=search_term_string"
      }
    }
  </script>
{%- endif -%}
